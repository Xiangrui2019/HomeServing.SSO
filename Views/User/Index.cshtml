@model IEnumerable<HomeServing.SSO.Models.ApplicationUser>

<div class="container">
    <h1>用户管理</h1>
    
    <partial name="_ValidationSummary" />

    <a asp-action="AddUser" class="btn btn-primary">添加用户</a>
    &nbsp;

    <table class="table table-striped table-responsive">
        <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">用户名</th>
                <th scope="col">昵称</th>
                <th scope="col">个人简介</th>
                <th scope="col">性别</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <th scope="row">@u.Id</th>
                    <td>@u.UserName</td>
                    <td>@u.NikeName</td>
                    <td>@u.Bio</td>
                    <td>@u.Gender.ToString()</td>
                    <td scope="row">
                        <form asp-action="DeleteUser" asp-route-id="@u.Id" method="post">
                            <a class="btn btn-primary" asp-action="EditUser" asp-route-id="@u.Id">编辑</a>
                            @if (u.UserName != User.Identity.Name)
                            {
                                <button type="submit" class="btn btn-danger"
                                        onclick="return confirm('确认删除这个用户?');">
                                    删除
                                </button>
                            }
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>