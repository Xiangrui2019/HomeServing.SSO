@model HomeServing.SSO.Modules.User.UserAddViewModel

<div class="register-page">
    <div class="lead">
        <h1>添加用户</h1>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h2>本地账户</h2>
                </div>

                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label>用户名</label>
                            <input class="form-control" placeholder="用户名" asp-for="UserName" autofocus>
                        </div>
                        <div class="form-group">
                            <label>密码</label>
                            <input type="password" class="form-control" placeholder="密码" asp-for="Password" autocomplete="off">
                        </div>

                        <button class="btn btn-primary" name="button" type="submit">添加</button>
                        &nbsp;
                        <a class="btn btn-secondary" asp-action="Index">返回主页</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>